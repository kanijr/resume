{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="My educations" big=true }}
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd}}
                    (ще в процесі)
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title data="My certificates" big=false}}
            <ul>
                {{#each certificates}}
                <li>{{name}} ({{id}})</li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>

