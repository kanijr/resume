{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<div class="p-5">
    <section>
        {{> title data=name big=true}}
        <div>Description: <span class="badge text-bg-light"><q>{{description}}</q></span></div>
        {{#with history}}
        <div>
            Year: <span class="badge text-bg-light">{{year}}</span>
            <br>
            Founder: <span class="badge text-bg-light">{{founder}}</span>
        </div>
        {{/with}}
        <hr>
        <div>
            <h4>Data types: </h4>
            <ul>
                {{#each types}}
                <li><span class="badge text-bg-primary">{{this}}</span></li>
                {{/each}}
            </ul>
        </div>
        <hr>
        {{#with syntax}}
        <div>
            <h5>Variables:</h5>
            <ul>
                {{#each variables}}
                <li><span class="badge text-bg-info">{{this}}</span></li>
                {{/each}}
            </ul>
            <h5>Functions:</h5>
            <ul>
                {{#each functions}}
                <li><span class="badge text-bg-secondary">{{this}}</span></li>
                {{/each}}
            </ul>
            <h5>Conditionals:</h5>
            <ul>
                {{#each conditionals}}
                <li><span class="badge text-bg-success">{{this}}</span></li>
                {{/each}}
            </ul>
            <h5>Loops:</h5>
            <ul>
                {{#each loops}}
                <li><span class="badge text-bg-dark">{{this}}</span></li>
                {{/each}}
            </ul>
            <h5>Functions:</h5>
            <ul>
                {{#each functions}}
                <li><span class="badge text-bg-warning">{{this}}</span></li>
                {{/each}}
            </ul>
        </div>
        {{/with}}
        <hr>
        <div>
            <h5>Features:</h5>
            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Features
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <ul>
                                {{#each features}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Libraries
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <ul>
                                {{#each libraries}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Tools
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <ul>
                                {{#each tools}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div>
            <h5>Community</h5>
            <ul>
                {{#each community}}
                <br>
                <li>
                    Name: <span class="badge text-bg-primary">{{name}}</span>
                    <br>
                    Type: <span class="badge text-bg-info">{{type}}</span>
                </li>
                {{/each}}
            </ul>
        </div>
    </section>
</div>

