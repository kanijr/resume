<main class="p-5">
    {{> shopheader}}

    <section class="mt-5">
        {{#with header}}
        {{> title data=title big=true}}
        <div class="mt-4">
            {{#with button}}
            <a href="{{link}}" class="btn btn-outline-secondary btn-sm">{{text}}</a>
            {{/with}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section class="mt-5">
        <div class="row g-4">
            {{#each goodsBlock}}
            {{> cartGoodsItem}}
            {{/each}}
        </div>
    </section>

    <hr class="my-5">

    <section class="mt-5">
        {{#with total}}
        <h4>{{title}}</h4>
        <div class="display-5 mb-2"><b>{{amount}}</b></div>
        <span class="text-muted">{{delivery}}</span>
        <div class="mt-2">
            {{#each buttons}}
            <div class="mt-3">
                {{#if isSuccess}}
                <a class="btn btn-success" href="{{link}}">{{text}}</a>
                {{/if}}
                {{#if isOutline}}
                <a class="btn btn-outline-success" href="{{link}}">{{text}}</a>
                {{/if}}
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section class="mt-5">
        {{#with goodsOtherBlock}}
        <h4 class="text-center mb-3">{{title}}</h4>
        <div class="row gy-4 gx-2">
            {{#each cards}}
            <div class="col-4">
                {{> shopcard}}
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    <section class="mt-5">
        {{#with subscribe}}
        <div class="card text-bg-dark p-2">
            <h2>{{header}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <div {{#unless @first}}class="mt-3" {{/unless}}>
                <a class="btn btn-primary" href="{{link}}">{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr class="my-5">

    {{> shopfooter}}
</main>