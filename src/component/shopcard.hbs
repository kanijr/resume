<div class="card">
    <img class="card-img-top" src="{{image}}">
    <div class="card-body">
        <div class="card-title">
            <h5>{{title}}</h5>
            {{#if isHot}}
            <span class="badge text-bg-warning rounded-pill text-uppercase text-light">Hot!</span>
            {{/if}}
            {{#if isNew}}
            <span class="badge text-bg-primary rounded-pill">New</span>
            {{/if}}
        </div>
        <p>{{description}}</p>
    </div>
</div>