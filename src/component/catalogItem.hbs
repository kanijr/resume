<div class="col-6">
    <div class="card">
        <img src="{{img}}" class="card-img-top">
        <div class="card-body pt-1">
            {{#if isHot}}
            <span class="badge text-bg-warning rounded-pill text-uppercase text-light">Hot!</span>
            {{/if}}
            {{#if isNew}}
            <span class="badge text-bg-primary rounded-pill">Нове</span>
            {{/if}}
            <div class="mt-3">
                {{#if isFast}}
                <span class="badge text-bg-success mb-1">Швидка доставка</span>
                {{/if}}
                {{#if isFree}}
                <span class="badge text-bg-secondary">Безкоштовна доставка</span>
                {{/if}}
                <h6 class="my-2">{{name}}</h6>

                <div class="mb-2">
                    {{#with review}}
                    {{amount}} {{text}}
                    {{/with}}
                </div>
                <h5 class="mb-2">{{price}}</h5>
                <div>
                    {{delivery}}
                </div>

                <div class="my-2 ">
                    {{#each buttons}}
                    <div>
                        {{#if isPrimary}}
                        <a href="{{link}}" class="btn btn-sm btn-primary {{#unless @first}}mt-1{{/unless}}">{{text}}</a>
                        {{/if}}
                        {{#if isSecondary}}
                        <a href="{{link}}"
                            class="btn btn-sm btn-secondary {{#unless @first}}mt-1{{/unless}}">{{text}}</a>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>

                <div>
                    <ul class="ps-3">
                        {{#each characteristics}}
                        <li class="text-sm"><small>{{title}}: {{value}}</small></li>
                        {{/each}}
                    </ul>
                </div>

            </div>

        </div>
    </div>

</div>