<div class="col-3">
    <div class="card text-bg-dark">
        <div class="card-header">
            {{title}}
            {{#if isNew}}
            <span class="badge text-bg-success rounded-pill">New</span>
            {{/if}}
            {{#if isTop}}
            <span class="badge text-bg-danger rounded-pill">Top</span>
            {{/if}}
        </div>
        <div class="card-body">
            {{description}}
        </div>
    </div>
</div>