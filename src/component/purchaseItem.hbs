<div class="border-bottom mb-3">
    <div class="row g-4 pb-2">
        <div class="col-4">
            <p class="mb-1 text-muted">{{number}}</p>
            <p class="text-dark">{{status}}</p>
        </div>

        <div class="col-2">
            {{#with amount}}
            {{title}}:
            <br>
            <b>{{value}}</b>
            {{/with}}
        </div>

        <div class="col-4">
            <div class="row g-2">
                {{#each images}}
                <div class="col-4">
                    <img class="rounded w-100" src="{{this}}">
                </div>
                {{/each}}
            </div>
        </div>

        <div class="col-2 pt-2">
            {{#with button}}
            <a class="mt-2 btn btn-sm {{#if isPrimary}}btn-primary{{else}}btn-outline-primary{{/if}}"
                href="{{link}}">{{text}}</a>
            {{/with}}
        </div>
    </div>
</div>